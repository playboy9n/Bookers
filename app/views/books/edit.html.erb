<h1>Editing Book</h1>
<%= form_for(@book) do |f| %>
	<h6>Title</h6>
	<%= f.text_field :title %>
	<h6>Body</h6>
	<%= f.text_area :body %>
<div class="btn">
	<%= f.submit 'Update Book' %>
</div>
<% end %>


<%= link_to "Show",book_path(@book.id),class: "show_#{@book.id}" %>
<span>|</span>
<%= link_to "back",books_path(@book),class: "back" %>